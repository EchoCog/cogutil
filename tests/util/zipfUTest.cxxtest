#include <opencog/util/zipf.h>

using namespace opencog;

class zipfUTest : public CxxTest::TestSuite
{
public:

	void test_zipf()
	{
		int sz = 300;
		Zipf zipf(1.0, sz);
		printf("zipf: donw with init\n");

		int* dist = new int[sz];
		for (int i = 0; i < sz; i++)
			dist[i] = 0;

		for (size_t s = 0; s < 623000; s++)
			dist[zipf.draw()] ++;

		for (int i = 0; i < sz; i++)
		{
			double approx = dist[i];
			approx /= i * dist[0];
			printf("ola %d %d %g\n", i, dist[i], approx);
		}
		
		// TS_ASSERT_DELTA(mean, m, delta);
	}
};
